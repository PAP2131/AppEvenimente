<Page x:Class="AppEvenimente.EventPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AppEvenimente"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Evenimente">

    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Nume eveniment:" Margin="5"/>
            <TextBox x:Name="tbxNumeEvent" Margin="5"/>

            <TextBlock Text="Data eveniment:" Margin="5"/>
            <DatePicker x:Name="dpEveniment" Margin="5"/>

            <TextBlock Text="Locatie eveniment:" Margin="5"/>
            <TextBox x:Name="tbxLocatieEvent" Margin="5"/>

            <Button Content="Adaugre eveniment" Margin="5" 
                    x:Name="btnAddEvent" Click="btnAddEvent_Click"/>
        </StackPanel>
        
    </Grid>
</Page>
